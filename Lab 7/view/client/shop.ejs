
    <%- include('header'); %>

        <main>
            <div class="py-5">
                <div class="container">
                    <div class="row">
                        <% for(let product of products) { %>
                            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                                <div class="card mb-4">
                                    <img src="images/<%= product.img%>" alt="" style="width: 100px;">
                                    <div class="card-body">
                                        <div class="cart-title fw-bold">
                                            <%= product.name %>
                                        </div>
                                        <div class="cart-title">price: <%= product.price %>
                                        </div>
                                        <% let title=product.title %>
                                        <% const maxLength=20; %>
                                            <% if (title.length> maxLength) { %>
                                                <% title=title.substring(0, maxLength) + '...' %>
                                            <% } %>
                                        <div class="cart-title">
                                            <%= title %>
                                        </div>
                                        <card-text><a href="" class="btn btn-primary">GiỏHàng</a></card-text>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </main>
        <footer>
            <!-- place footer here -->
        </footer>
