<%- include('header'); %>

    <main>
        <center>
            <h1>Chào Mừng Bạn Ghé Thăm Website</h1> <br>
        </center>

        <div class="container" ng-app="appHTML">
            <div class="mb-3" ng-controller="formController">
                <label for class="form-label">Name</label>
                <input type="text" ng-model="name" class="form-control" name id aria-describedby="helpId" placeholder />
                <small id="helpId" class="form-text text-muted">ban vua nhap vao: {{ name }}</small>
            </div>
            <div class="table-responsive" ng-app="appHTML">
                <table class="table table-striped table-hover table-borderless table-primary align-middle" ng-controller="ListController">
                    <thead class="table-light">
                        <caption>
                            Table Name
                        </caption>
                        <tr>
                            <th>Column 1</th>
                            <th>Column 2</th>
                            <th>Column 3</th>
                            <th>Column 4</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider" >
                        <tr class="table-primary" ng-repeat="item in listData">
                            <td scope="row">{{ item.name }}</td>
                            <td>{{ item.title }}</td>
                            <td><img src="/images/{{ item.img }}" style="width: 100px;" alt=""></td>
                            <td>{{ item.price }}</td>
                        </tr>
                    </tbody>
                    <tfoot>

                    </tfoot>
                </table>
            </div>
        </div>
    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <script src="script/scipt.js"></script>
    </body>

    </html>